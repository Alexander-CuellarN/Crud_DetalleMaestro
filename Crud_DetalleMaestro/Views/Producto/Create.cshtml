@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Producto
<div class="row">
    <div class="col-lg-12">
        <h1>Crear Producto</h1>
    </div>
    <div class="col-lg-12">
        @using (Html.BeginForm("Create", "Producto", FormMethod.Post, new { @class = "col-lg-12" }))
        {
            <div class="form-group mb-2">
                <label for="Nombre" class="form-label">Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control" />
                <span class="text-danger" asp-validation-for="Nombre"></span>
            </div>

            <div class="form-group mb-2">
                <label for="Stock">Stock</label>
                <input type="number" asp-for="Stock" class="form-control" />
                <span class="text-danger" asp-validation-for="Stock"></span>
            </div>
            <div class="form-group mb-2">
                <label for="Categoria">Categoria</label>
                <select asp-for="Categoria" class="form-control"
                        asp-items=" new SelectList(ViewBag.Categorias,
                        nameof(Categoria.IdCategria),
                        nameof(Categoria.Nombre),
                        nameof(Producto.Categoria))">
                    <option value="-1">--Selecione uno--</option>
                </select>

                <span class="text-danger" asp-validation-for="Categoria"></span>
            </div>

            <div class="form-group mb-2">
                <label for="Precio">Precio</label>
                <input type="number" asp-for="Precio" class="form-control" />
                <span class="text-danger" asp-validation-for="Precio"></span>
            </div>
            
            <div>
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" asp-controller="Producto" class="btn btn-outline-primary">Regresar</a>
            </div>
        }
    </div>
</div>