@model IEnumerable<Crud_DetalleMaestro.Models.Pedido>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col_lg_12 contentTitle">
        <h1>Pedidos</h1>
    </div>
    <div class="col_lg_12">
        <div class="d-flex justify-content-end mb-2">
            <a asp-action="Create" asp-controller="Pedidos" class="btn myBtn myBtnNew"> Crear Pedido</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nit</th>
                    <th w-75>Nombre</th>
                    <th>Total </th>
                    <th class="w-5">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pedido in Model)
                {
                    <tr id="tr_@pedido.IdPedido">
                        <td>@pedido.Nit </td>
                        <td>@pedido.Nombre  </td>
                        <td>@pedido.Total</td>
                        <td>
                            <button class="btn myBtn myBtnInfo ListDetails" data-Identificator="@pedido.IdPedido" data-bs-toggle="modal" data-bs-target="#ModalList"> Detalles</button>
                            <a asp-action="Edit" asp-controller="Pedidos" asp-route-id="@pedido.IdPedido" class="btn myBtn myBtnEdit">Modificar</a>
                            <button class="btn myBtn myBtnDelete removeElement" data-Identificator="@pedido.IdPedido"> Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade " id="ModalList" tabindex="-1" aria-labelledby="ModalList" aria-hidden="true">
        <div class="modal-dialog  modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Lista de Productos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-striped table-responsive ">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody id="tableProductsContent">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pedidoList.js" type="module"></script>
}